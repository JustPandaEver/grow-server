// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Player {
  id             String      @id @db.VarChar
  lastNetId      Int?        @default(-1)

  name           String?
  password       String?
  email          String?
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  mac            String?
  rid            String?
  tag            Int?
  requestedName  String?

  currentWorld   String?
  lastWorlds     String[]
}

model World {
  id            String           @id @db.VarChar
  name          String
  blockCount    Int              @default(6000)
  witdh         Int              @default(100)
  height        Int              @default(60)

  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt
  playerCount   Int              @default(0)

  ownerId       String
  admins        String[]

  blocks        WorldBlock[]
}

model WorldBlock {
    id            String         @id @db.VarChar
    worldId       String

    x             Int
    y             Int
    fg            Int
    bg            Int

    lock          Json?
    sign          Json?
    door          Json?

    rotatedLeft   Boolean        @default(false)

    world         World          @relation(fields: [worldId], references: [id], onDelete: Cascade, onUpdate: NoAction)
}